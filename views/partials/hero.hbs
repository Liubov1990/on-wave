<section class="hero">
  <div class="hero-slider">
    {{#each data}}
      <div class="hero-slider__item">
        <div class="hero-slider__overlay">
          <div class="hero-slider__cta cta">
            <h1 class="cta__title">{{title}}</h1>
              {{> button}}
          </div>
        </div>
        <picture>
          <source type="image/webp" media="(min-width: 900px)" srcset="{{imgDesktop}}" />
          <source type="image/webp" media="(max-width: 599px)" srcset="{{imgMobile}}" />
          <source type="image/webp" media="(max-width: 899px)" srcset="{{imgTablet}}" />

          <img
            src="{{imgDesktop}}"
            data-lazy='{{imgDesktop}}'
            alt="{{altText}}"
            class="hero-slider__img"
            width="1400"
            height="700"
          />
        </picture>
      </div>
    {{/each}}
  </div>
</section>
